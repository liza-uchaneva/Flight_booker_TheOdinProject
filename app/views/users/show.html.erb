<%= link_to  "Home", flights_path %>
<% if user_signed_in? %>
  <%= link_to  "Sign out", destroy_user_session_path %>
<% end %>
<br>
<% if @bookings.size == 0 %>
  <td>You don't have any bookings yet</td>
<% else %>
  <% @bookings.each do |booking| %>
    <div><%= link_to "Booking:", booking %></div>
    <div> Flight detail: <%= booking.flight.flight_detail %></div> 
    <% booking.passengers.each do |passenger| %>
      <div> Ticket infor: </div>
      <div> Name: <%= passenger.name %></div>    
      <div> Email: <%= passenger.email %></div>  
      <br>  
    <% end %>
    <hr>
  <% end %> 
<% end %>